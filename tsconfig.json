{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "strict": true,
        "outDir": "dist",
        "sourceMap": true,
        "lib": ["ES2020", "DOM"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES2015"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
